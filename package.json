  },
  "homepage": "https://github.com/training4developers/ng2-widgets-app#readme",
  "devDependencies": {
    "awesome-typescript-loader": "^1.1.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
