{
  "name": "ng2-widgets-app",
  "version": "1.0.0",
  "description": "Demonstration web application using Angular 2",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "postinstall": "typings install && npm run build",
    "test": "karma start ./config/karma.conf.js",
    "clean": "rimraf dist",
    "typings": "typings install",
    "build": "npm run clean && npm run server && npm run webpack-once",
    "webpack": "webpack --config ./config/webpack.dev.js --watch",
    "webpack-once": "webpack --config ./config/webpack.dev.js",
    "server": "tsc --sourceMap -t ES5 --outdir ./dist ./src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/training4developers/ng2-widgets-app.git"
  },
