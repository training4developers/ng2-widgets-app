{
  "name": "ng2-widgets-app",
  "version": "1.1.0",
  "description": "Demonstration web application using Angular 2.0.1",
  "scripts": {
    "postinstall": "npm run typings",
    "typings": "typings install",
    "start": "npm run clean && concurrently \"npm run webpack\" \"npm run web\" \"npm run rest\"",
    "clean": "rimraf dist",
    "web": "browser-sync start -c ./config/bs-config.js",
    "rest": "json-server --watch --port 3010 db.json",
    "webpack": "webpack --config ./config/webpack.dev.js --watch",
    "webpack-once": "webpack --config ./config/webpack.dev.js",
    "test": "karma start ./config/karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/training4developers/ng2-widgets-app.git"
  },
  "keywords": [
    "angular2",
    "typescript",
    "angular"
  ],
  "author": "Eric W. Greene",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/training4developers/ng2-widgets-app/issues"
  },
  "homepage": "https://github.com/training4developers/ng2-widgets-app#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "browser-sync": "^2.17.0",
    "concurrently": "^3.0.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "^2.4.1",
    "json-server": "^0.8.21",
    "karma": "^1.1.0",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-junit-reporter": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-source-map-support": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lodash": "^4.16.2",
    "node-sass": "^3.8.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss": "^5.0.21",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.13.0",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^1.4.4",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "ts-helpers": "^1.1.1",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "typings": "^1.3.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-merge": "^0.14.0"
  },
  "dependencies": {
    "@angular/common": "^2.0.1",
    "@angular/compiler": "^2.0.1",
    "@angular/core": "^2.0.1",
    "@angular/forms": "^2.0.1",
    "@angular/http": "^2.0.1",
    "@angular/platform-browser": "^2.0.1",
    "@angular/platform-browser-dynamic": "^2.0.1",
    "@angular/router": "^3.0.1",
    "angular2-in-memory-web-api": "0.0.21",
    "bootstrap": "^4.0.0-alpha.4",
    "bootstrap-loader": "^1.0.10",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-beta.12",
    "systemjs": "^0.19.39",
    "zone.js": "^0.6.25"
  }
}
